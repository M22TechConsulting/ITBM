<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_pricelist_report_wizard_view_form" model="ir.ui.view">
            <field name="name">product_pricelist_report_wizard_view_form</field>
            <field name="model">product.pricelist.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Reporte de lista de precios">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_ids" options="{'no_create':True}" domain="[('sale_ok','=',True)]" required="1" widget="many2many_tags"/>
                                <field name="company_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="pricelist_ids" options="{'no_create':True}" widget="many2many_tags"/>
                                <field name="attribute_ids" options="{'no_create':True}" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="generate_report_xlsx" string="Imprimir" class="btn btn-primary" type="object"/>
                        <button string="Cerrar" special="cancel" class="btn btn-secondary" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="product_pricelist_report_wizard_view_action" model="ir.actions.act_window">
            <field name="name">Informe de lista de precios</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.pricelist.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="product_pricelist_report_wizard_menuitem" name="Listas de precios" parent="sale.menu_sale_report" action="product_pricelist_report_wizard_view_action" sequence="10"/>

    </data>
</odoo>